@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control rounded" placeholder="All" asp-for="SearchTerm" />
            <span class="input-group-append">
                <button class="btn btn-secondary">Search</button>
            </span>
        </div>
    </div>
</form>


<table class="table">
    <tr>
        <td><h5>Name</h5></td>
        <td><h5>Location</h5></td>
        <td><h5>Cuisine</h5></td>
    </tr>
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td style="vertical-align:middle">@restaurant.Name</td>
            <td style="vertical-align:middle">@restaurant.Location</td>
            <td style="vertical-align:middle">@restaurant.Cuisine</td>
            <td>
                <a class="btn btn-lg"
                   asp-page="./Detail"
                   asp-route-restaurantId="@restaurant.Id">
                    <i class="fa fa-search-plus"></i>
                </a>
                <a class="btn btn-lg"
                   asp-page="./Edit"
                   asp-route-restaurantId="@restaurant.Id">
                    <i class="fa fa-edit"></i>
                </a>
            </td>
        </tr>
    }
</table>

<a asp-page="./Edit" class="btn btn-primary">Add New</a>

@section footer {
    <div>@Model.Message</div>
}
