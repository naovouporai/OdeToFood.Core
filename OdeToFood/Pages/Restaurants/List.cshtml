@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "Restaurants";
}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control rounded" placeholder="All" asp-for="SearchTerm" />
            <span class="input-group-append">
                <button class="btn btn-secondary">Search</button>
            </span>
        </div>
    </div>
</form>


@foreach (var restaurant in Model.Restaurants)
{ 
    <partial name="_Summary" model="restaurant" /><br />
}


    <a asp-page="./Edit" class="btn btn-primary">Add New</a>


    @section footer {
        <div>@Model.Message</div>
    }
    
   